{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@components/chess": ["./app/components/chess/index.ts"],
      "@validationFunctions": ["./app/validationFunctions/index.server.ts"],
      "@services": ["./app/services/index.server.ts"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
